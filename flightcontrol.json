{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "api",
          "name": "API",
          "type": "web",
          "cpu": 0.5,
          "memory": 1,
          "target": {
            "type": "fargate"
          },
          "buildType": "nixpacks",
          "ci": {
            "type": "ec2"
          },
          "basePath": "./backend",
          "installCommand": "poetry install --no-dev --no-ansi",
          "startCommand": "uvicorn backend.main:app --host 0.0.0.0 --port 8000"
        },
        {
          "id": "frontend",
          "name": "Frontend Web",
          "type": "static",
          "buildType": "nixpacks",
          "ci": {
            "type": "ec2"
          },
          "singlePageApp": true,
          "basePath": ".",
          "buildCommand": "cd frontend && vite build",
          "outputDirectory": "frontend/dist"
        }
      ]
    }
  ]
} 